<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "com.radiok.kuom"
        versionCode="9" 
        version   = "2.4">

    <!-- versionCode is optional and Android only -->
<preference name="phonegap-version" value="3.6.3" />
    <name>Radio K - KUOM</name>
    <description>Radio K, the award-winning radio station of the University of Minnesota.</description>
<gap:platform name="android" />
<gap:platform name="ios" />
<gap:config-file platform="android" parent="/manifest/application">
    <activity android:launchMode="singleInstance" />
</gap:config-file>
<preference name="fullscreen" value="true" />
<preference name="orientation" value="portrait" />
<preference name="permissions" value="none"/>
<gap:splash src="splash.png" />
<!--
<gap:plugin name="org.apache.cordova.media" />
-->
<gap:plugin name="org.apache.cordova.network-information" />
<gap:plugin name="nl.kingsquare.background-audio" version="1.0.0" />
<access origin="*" />
<!--
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/media"/>
-->
<icon src="icon.png" />
<gap:plugin name="com.phonegap.plugins.childbrowser" />
</widget>